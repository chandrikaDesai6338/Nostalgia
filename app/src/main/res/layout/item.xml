<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/feed_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/feed_item_margin"
            android:layout_marginRight="@dimen/feed_item_margin"
            android:orientation="vertical"
            android:paddingTop="@dimen/feed_item_padding_top_bottom"
            android:paddingBottom="@dimen/feed_item_padding_top_bottom">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="@dimen/feed_item_profile_pic"
                    android:layout_height="@dimen/feed_item_profile_pic"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="5dp"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_launcher_round"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/feed_item_profile_info_padd"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/feed_item_profile_name"
                        android:text="John"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/timestamp"
                        android:textSize="@dimen/feed_item_timestamp" />

                </LinearLayout>
                <ImageView
                    android:id="@+id/share"
                    android:layout_width="@dimen/feed_item_profile_pic"
                    android:layout_height="@dimen/feed_item_profile_pic"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:src="@mipmap/ic_launcher_round"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/feedImage1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:src="@drawable/feed1"
                android:visibility="visible" />
            <TextView
                android:id="@+id/desc"
                android:layout_width="fill_parent"
                android:text="The Himalayas has played the important role of a foster mother for the Indians. The Himalayan mountain ranges stand like a mighty wall and protect India from foreign invasion."
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/feed_item_status_pad_left_right"
                android:paddingTop="@dimen/feed_item_status_pad_top"
                android:paddingRight="@dimen/feed_item_status_pad_left_right"
                android:paddingBottom="5dp" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
